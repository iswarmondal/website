---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'projects'>['data'];

const { title, description, date, status, tags, link, github } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.case-study {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 2em 1em;
				color: var(--text-primary);
			}
			.header {
				margin-bottom: 3em;
				padding: 2em 0;
				text-align: center;
				border-bottom: 4px double var(--text-primary);
			}
			.title {
				margin: 0 0 0.5em 0;
				font-size: 2.5em;
				text-transform: uppercase;
				letter-spacing: 0.05em;
				line-height: 1.2;
			}
			.metadata {
				margin: 1.5em 0;
				font-style: italic;
				color: var(--accent);
			}
			.description {
				font-size: 1.2em;
				line-height: 1.6;
				font-style: italic;
				opacity: 0.8;
				margin: 1em 0;
			}
			.tags {
				display: flex;
				flex-wrap: wrap;
				gap: 0.5em;
				justify-content: center;
				margin: 1em 0;
			}
			.tag {
				padding: 0.2em 0.8em;
				border: 1px solid var(--accent);
				font-size: 0.9em;
				color: var(--accent);
				text-decoration: none;
			}
			.links {
				margin-top: 1em;
				display: flex;
				gap: 1em;
				justify-content: center;
			}
			.link {
				color: var(--accent);
				text-decoration: none;
				border-bottom: 1px solid transparent;
				transition: border-color 0.3s ease;
			}
			.link:hover {
				border-bottom-color: var(--accent);
			}
			.content {
				margin-top: 2em;
				text-align: justify;
				hyphens: auto;
			}
			.content :global(h2) {
				font-size: 1.8em;
				margin: 2em 0 1em;
				text-transform: uppercase;
				letter-spacing: 0.05em;
				text-align: center;
				position: relative;
			}
			.content :global(h2)::after {
				content: "";
				display: block;
				width: 50%;
				height: 1px;
				background: var(--text-primary);
				margin: 0.5em auto 0;
			}
			.content :global(h3) {
				font-size: 1.4em;
				margin: 1.5em 0 1em;
				font-weight: 700;
			}
			.content :global(p) {
				margin-bottom: 1.5em;
				line-height: 1.7;
			}
			.content :global(ul) {
				margin: 1em 0;
				padding-left: 1.5em;
			}
			.content :global(li) {
				margin: 0.5em 0;
			}
			.status {
				display: inline-block;
				padding: 0.2em 1em;
				border: 1px solid var(--accent);
				color: var(--accent);
				font-size: 0.9em;
				text-transform: capitalize;
			}
			@media (max-width: 720px) {
				.case-study {
					padding: 1em;
				}
				.header {
					padding: 1em 0;
				}
				.title {
					font-size: 2em;
				}
				.content :global(h2) {
					font-size: 1.5em;
				}
				.content :global(h3) {
					font-size: 1.2em;
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article class="case-study">
				<header class="header">
					<div class="metadata">
						<span>
							Project date <FormattedDate date={date} />
						</span>
					</div>
					<h1 class="title">{title}</h1>
					<p class="description">{description}</p>
					<div class="tags">
						{tags.map(tag => <span class="tag">{tag}</span>)}
					</div>
					<div class="status">{status}</div>
					<div class="links">
						{link && <a href={link} class="link" target="_blank">View Project</a>}
						{github && <a href={github} class="link" target="_blank">GitHub Repository</a>}
					</div>
				</header>
				<div class="content">
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html> 
---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			.experience-item {
				margin: 1rem 0;
			}
			.social-links {
				display: flex;
				gap: 1rem;
				align-items: center;
				margin: 1.5rem 0;
				filter: grayscale(100%);
			}
			.footer-image {
				max-width: 100%;
				border-radius: 8px;
				margin: 2rem 0;
			}
			.cta-section {
				margin: 2rem 0;
				padding: 1rem 0;
				border-top: 1px solid #eaeaea;
				border-bottom: 1px solid #eaeaea;
			}
			.wave-emoji {
				display: inline-block;
				animation: wave 2.5s infinite;
				transform-origin: 70% 70%;
			}
			@keyframes wave {
				0% { transform: rotate(0deg); }
				10% { transform: rotate(14deg); }
				20% { transform: rotate(-8deg); }
				30% { transform: rotate(14deg); }
				40% { transform: rotate(-4deg); }
				50% { transform: rotate(10deg); }
				60% { transform: rotate(0deg); }
				100% { transform: rotate(0deg); }
			}
			/* Timeline Styles */
			.timeline {
				position: relative;
				max-width: 100%;
				margin: 4em auto;
			}
			.timeline::before {
				content: '';
				position: absolute;
				left: 82px;
				top: 0;
				bottom: 0;
				width: 1px;
				background: var(--text-primary);
				opacity: 0.3;
			}
			.timeline-item {
				position: relative;
				margin: 2em 0;
				padding-left: 120px;
			}
			.timeline-item::before {
				content: '';
				position: absolute;
				left: 73px;
				top: 0;
				width: 16px;
				height: 16px;
				border: 2px solid var(--accent);
				background: rgb(var(--paper));
				border-radius: 50%;
			}
			.date-block {
				position: absolute;
				left: 0;
				top: -10px;
				max-width: 100px;
				text-align: right;
				color: var(--accent);
				font-style: italic;
				font-size: 0.9em;
				line-height: 1.4;
				transform: rotate(-90deg);
			}
			.timeline-content {
				border-bottom: 1px solid rgba(0, 0, 0, 0.1);
				padding-bottom: 2em;
			}
			@media (max-width: 720px) {
				.timeline::before {
					left: 30px;
				}
				.timeline-item {
					padding-left: 60px;
				}
				.timeline-item::before {
					left: 23px;
				}
				.date-block {
					width: auto;
					text-align: left;
					left: -30px;
				}
				.timeline-content {
					margin-top: 1em;
				}
			}
		</style>
	</head>
